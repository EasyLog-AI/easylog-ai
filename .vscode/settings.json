{
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "tailwindCSS.classAttributes": ["class", "className", "classNames", "tv"],
  "tailwindCSS.experimental.classRegex": [
    [
      // Match tailwind variants functions
      "tv\\(([^)(]*(?:\\([^)(]*(?:\\([^)(]*(?:\\([^)(]*\\)[^)(]*)*\\)[^)(]*)*\\)[^)(]*)*)\\)",
      "'([^']*)'",
      // Match classNames={{ ... }}
      "classNames\\s*=\\s*\\{\\s*([^}]*)\\}"
    ]
  ],
  "eslint.workingDirectories": ["./apps/web"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.extraPaths": ["./apps/api"],
  "python.defaultInterpreterPath": "./apps/api/.venv/bin/python",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "notebook.codeActionsOnSave": {
    "notebook.source.organizeImports.ruff": "explicit",
    "notebook.source.fixAll.ruff": "explicit"
  },
  "notebook.formatOnSave.enabled": true,
  "python.testing.pytestArgs": ["apps"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "cSpell.words": [
    "easylog",
    "graphiti",
    "pdfs",
    "supabase",
    "Ziektelastmeter"
  ],
  "cursorpyright.analysis.extraPaths": ["./apps/api"],
  "cursorpyright.analysis.typeCheckingMode": "basic"
}
